<?xml version="1.0" encoding="UTF-8"?>
<!-- Inherited MessagingMenu template for adding the reply button -->
<templates xml:space="preserve">
    <t t-inherit="mail.MessagingMenu.content" t-inherit-mode="extension">
        <xpath expr="//NotificationItem[@body='message?.inlineBody or message?.subtype_description']" position="after">
            <t t-if="message" t-set-slot="icon">
                <t t-if="thread.channel_type === 'chat' and !message.isSelfAuthored and !thread.isCorrespondentOdooBot">
                    <div class="d-flex flex-column flex-grow-1 align-self-start " style="width: 100%;">
                        <button type="button" class="btn btn-secondary align-items-center justify-content-center badge
                         rounded-pill fw-bold" id="reply_button" t-ref="reply_button" t-on-click="(event) => this.onClickReply(message)"
                                style="display:block;background-color: #0da74e;width: 70px;height: 20px;font-size: 10px;margin-top: -35px;z-index: 1;margin-left:280px;">Reply
                        </button>
                        <div class="replay_section" style="display:none;">
                            <input type="text" name="name" t-att-value="name" id="reply_message"
                                   t-ref="input_reply"
                                   class="form-control form-control-sm input_message"
                                   t-on-keyup="(ev) => this.composeMessage(ev, thread)"
                                   placeholder="Reply" style=" padding: 8px;margin-top: -5px;
                                   background-color: #ccd1d1 ;width: 100%;shadow-none overflow-auto"/>
                            <div class="chatter_composer_icons d-flex w-20">
                                <i class="btn border-0 rounded-pill fa fa-smile-o"
                                   aria-label="Emojis" id="emoji_reply" t-ref="emoji-button" t-on-click="onClickAddEmoji"
                                   style="margin-top:-40px;padding:20px;margin-left:370px;">
                                </i>
                                <span class="fa fa-arrow-up text-600 opacity-75 opacity-100-hover cursor-pointer" t-ref="send_reply" id="send_reply"
                                  style="margin-top: -20px;"
                                  title="Send Reply" t-on-click="(event) => this.onClickSendReply(thread)"/>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-if="thread.channel_type === 'channel' and !message.isSelfAuthored and !thread.isCorrespondentOdooBot">
                    <div class="d-flex flex-column flex-grow-1 align-self-start " style="width: 100%;">
                        <button type="button" class="btn btn-secondary align-items-center justify-content-center badge
                         rounded-pill fw-bold" id="reply_button" t-ref="reply_button" t-on-click="(event) => this.onClickReply(message)"
                                style="display:block;background-color: #0da74e;width: 70px;height: 20px;font-size: 10px;margin-top: -35px;z-index: 1;margin-left:280px;">Reply
                        </button>
                        <div class="replay_section" style="display:none;">
                            <input type="text" name="name" t-att-value="name" id="reply_message_channel"
                                   t-ref="input_reply_channel"
                                   class="form-control form-control-sm input_message"
                                   t-on-keyup="(ev) => this.composeMessage(ev, thread)"
                                   placeholder="Reply" style=" padding: 8px;margin-top: -5px;
                                   background-color: #ccd1d1 ;width: 100%;shadow-none overflow-auto"/>
                            <div class="chatter_composer_icons d-flex w-20">
                                <i class="btn border-0 rounded-pill fa fa-smile-o"
                                   aria-label="Emojis" id="emoji_reply_channel" t-ref="emoji-channel-button" t-on-click="onClickAddEmojiChannel"
                                   style="margin-top:-40px;padding:20px;margin-left:370px;">
                                </i>
                                <span class="fa fa-arrow-up text-600 opacity-75 opacity-100-hover cursor-pointer" t-ref="send_reply" id="send_reply"
                                  style="margin-top: -20px;"
                                  title="Send Reply" t-on-click="(event) => this.onClickSendReply(thread)"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>