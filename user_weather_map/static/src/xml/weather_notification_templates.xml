<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">
    <!-- Template for weather notification -->
    <t t-name="systrayWeatherMenu" owl="1">
        <Dropdown>
            <button>
                <i class="fa fa-cloud" role="img" aria-label="Weather"/>
            </button>
            <t t-set-slot="content">
                <div t-if="state.weather_data.main" class="padding"
                     style="overflow:hidden;width:285px;height:165px;">
                    <!-- Weather card container -->
                    <div class="card">
                        <img class="px-1"
                             t-att-src="'/user_weather_map/static/src/img/weather_card.jpg'"
                             alt="Card image cap"/>
                        <div class="card-img-overlay" style="height:110px;">
                            <h3 class="card-title text-white m-b-0 dl">
                                <span t-esc="state.weather_data.name"/>
                            </h3>
                            <small class="card-text text-white font-light">
                                <span t-esc="state.weather_data.weather[0].main"/>
                            </small>
                        </div>
                        <div class="card-body weather-small">
                            <!-- Weather details -->
                            <div class="row">
                                <div class="col-8 b-r align-self-center">
                                    <div class="d-flex">
                                        <div class="display-6 text-info">
                                            <i class="mdi mdi-weather-pouring"/>
                                        </div>
                                        <div class="m-l-20">
                                            <!-- Temperature and description -->
                                            <h2 class="font-light text-info"
                                                t-if="state.weather_data.main.temp">
                                                <span t-esc="Math.round(state.weather_data.main.temp - 273.15)"/>
                                                <sup>0</sup>C
                                            </h2>
                                            <small>
                                                <span t-esc="state.weather_data.weather[0].description"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div t-else="" class="alert alert-warning"
                     style="height: 51px; margin-top: -7px;padding: 15px;margin-bottom: -6px;">
                    <i class="fa fa-exclamation-triangle"/>
                    <strong>Warning!</strong>
                    Please configure your API key and Location in the Weather
                    settings.
                </div>
            </t>
        </Dropdown>
    </t>
</templates>
