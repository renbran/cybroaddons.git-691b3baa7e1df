<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="header_1" inherit_id="website.layout" active="True" name="Header 1">
        <xpath expr="//header" position="before">
            <div class="container">
                <div class="row header-top py-2">
                    <div class="col">
                        <div class="header-top-wrap d-flex justify-content-between align-items-center">
                            <!-- Left side with contact info -->
                            <div class="header-top-left">
                                <div class="info d-flex flex-md-row flex-column">
                                    <div class="phone-info mb-1 mb-md-0 me-md-4">
                                        <span class="me-2">PHONE:</span>
                                        <a href="#" t-att-value="res_company.phone">
                                            <t t-esc="res_company.phone"/>
                                        </a>
                                    </div>
                                    <div class="email-info">
                                        <span class="me-2">EMAIL:</span>
                                        <a href="#" t-att-href="'mailto:' + res_company.email">
                                            <t t-esc="res_company.email"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- Right side navigation -->
                            <div class="header-top-right">
                                <ul class="top-nav d-flex list-unstyled m-0">
                                    <li class="me-3">
                                        <a href="#" class="text-decoration-none">GIFT CARD</a>
                                    </li>
                                    <li class="me-3">
                                        <a href="#" class="text-decoration-none">TRACK ORDER</a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-decoration-none">LANGUAGE</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>