<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Risk Tag list View-->
    <record id="risk_tag_view_list" model="ir.ui.view">
        <field name="name">risk.tag.view.list</field>
        <field name="model">risk.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom" sample="1">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>
</odoo>