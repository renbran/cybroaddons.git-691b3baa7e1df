<?xml version="1.0" encoding="UTF-8"?>
<!--Inherit ControlButtons template for adding a button for stock transfer-->
<templates id="template" xml:space="preserve">
    <t t-name="stock_transfer_in_pos.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton" position="after">
            <t t-if="this.pos.config.stock_transfer">
                <button t-att-class="buttonClass"
                        t-on-click="() => this.clickDiscount1()">
                        <i class="fa fa-tag me-1"/>Stock Transfer
                </button>
            </t>
        </xpath>
    </t>
</templates>
