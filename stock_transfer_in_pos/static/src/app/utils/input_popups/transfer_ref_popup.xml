<?xml version="1.0" encoding="UTF-8"?>
<!--This template is used for showing the success message for the transfer-->
<templates id="template" xml:space="preserve">
    <t t-name="stock_transfer_in_pos.TransferRefPopup">
        <Dialog title="props.title" bodyClass="'d-flex flex-column justify-content-center'" size="'sm'">
            <div class="popup popup-text popup-med stock-transfer-popup">
                <div align="center" style="height:60px; margin-top:20px;">
                    <td>Stock Transfer Ref:</td>
                    <td style="color:#017e84" t-on-click="stock_view"><t t-esc="props.data['name']"/></td>
                </div>
                <t t-set-slot="footer">
                    <div class="d-flex flex-grow-1 justify-content-center">
                        <button class="btn btn-primary btn-lg lh-lg o-default-button me-2" tabindex="1" t-on-click="confirm">
                            <t t-esc="props.confirmButtonLabel || 'Ok'" />
                        </button>
                    </div>
                </t>
        </div>
        </Dialog>
    </t>
</templates>
