<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="BarcodePopup" owl="1">
        <Dialog size="'sm'" title="'Enter Barcode'">
            <div class="form-group px-3">
                <label>Barcode:</label>
                <input type="text"
                       class="form-control"
                       placeholder="Enter Barcode"
                       t-model="state.barcodeValue"/>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-lg btn-secondary"
                        t-on-click="cancel">Cancel</button>
                <button class="btn btn-lg btn-primary" t-on-click="confirm">Confirm</button>
            </t>
        </Dialog>
    </t>
</templates>
