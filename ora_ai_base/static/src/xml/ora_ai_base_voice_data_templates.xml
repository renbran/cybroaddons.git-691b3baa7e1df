<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
<!--    renders the voice assistant UI component for displaying-->
    <!--        both the conversation and the order summary-->
    <t t-name="ora_ai_base.voice_data" owl="1">
    <div class="container">
        <div class="row">
            <div class="drive_th_wrapper">
                <!-- The Conversation Section starts here -->
                <div class="drive_th_chat_left">
                    <h4>Conversation</h4>
                    <t t-foreach="state.conversation" t-as="message" t-key="message_index">
                        <t t-if="message.role == 'user'">
                            <div class="drive_th_chat_head">
                                <div class="icon">
                                    <img src="/ora_ai_base/static/description/assets/person (1) 1.svg"/>
                                </div>
                                <div class="drive_th_chat_que">
                                   <t t-esc="message.content"/>
                                </div>
                            </div>
                        </t>
                        <t t-if="message.role == 'assistant'">
                            <div class="drive_th_chat_answer ">
                                <div class="icon2">
                                    <img src="/ora_ai_base/static/description/assets/sparkle 2.svg"/>
                                </div>
                                <div class="drive_th_chat_exp">
                                   <t t-esc="message.content"/>
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
                <div class="drive_th_order"
                     style="background-image: url('/ora_ai_base/static/description/assets/lightning.svg')">
                <h4>Order</h4>
                    <div class="customer">
                    <div class="customer_img">
                        <img src="/ora_ai_base/static/description/assets/customer.jpg"/>
                    </div>
                        <div class="customer_name">
                        <t t-if="state.customer">
                            <t t-out="state.customer"/>
                        </t>
                    </div>
                </div>
                    <div class="dr_th_table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Variant</th>
                                <th>Quantity</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.products" t-as="product" t-key="product.product_id">
                                <tr>
                                    <td><t t-out="product.product"/></td>
                                    <td><t t-out="product.variant || '-'"/></td>
                                    <td><t t-out="product.quantity"/></td>
                                    <td><t t-out="product.product_id"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
    </div>
    </t>
</templates>