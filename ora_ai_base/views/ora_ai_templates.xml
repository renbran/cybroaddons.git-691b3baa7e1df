<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Allows users to select a voice assistant from a list and submit the form.-->
    <template id="vapi_assistant_template">
        <t t-call="website.layout">
            <div class="container">
                <form id="vapi_voice_assistant" action="/vapi_voice_assistant/form/submit">
                    <div class="assistant_heading" style="margin: 30px;">
                        <h1>Voice Assistant</h1>
                    </div>
                    <div class="assistant_body" style="margin:30px;">
                        <h3>Choose Assistant</h3>
                        <select name="vapi_assistant" class="user_input_field">
                            <option disabled="disabled" t-att-selected="1"/>
                            <t t-foreach="assistant_list" t-as="rec">
                                <option t-att-value='rec.id_assistant'>
                                    <t t-out="rec.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="voice-assistant-button"/>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>