<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--This record customizes the general settings form -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ora.ai.base</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Voice Assistant" data-string="Vapi Voice Assistant" name="vapi_management">
                    <block title="API Keys" name="api_keys_setting_container">
                        <setting id="vapi_api_keys">
                            <group>
                                <field name="vapi_private_api_key" password="True"/>
                                <field name="vapi_public_api_key" password="True"/>
                            </group>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
    <!--Open the settings form with focus on the vapi_management -->
    <record id="res_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'vapi_management'}</field>
    </record>
</odoo>