<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	 <!-- Template for the custom control button to create a product in the
	  Point of Sale -->
    <t t-name="LanguageChange" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
		<xpath expr="//OrderlineNoteButton" position="after">
			<div class="control-button btn btn-light rounded-0" t-on-click="() => this.onClick()">
				<i class="fa fa-language" role="img" aria-label="Language Change" title="Language Change"/>
				<span>  Change Language</span>
			</div>
		</xpath>
	</t>
</templates>
