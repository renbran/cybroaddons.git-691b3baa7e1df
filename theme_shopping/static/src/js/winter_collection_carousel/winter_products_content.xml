<?xml version="1.0" encoding="UTF-8" ?>
<!--Deal week template-->
<templates id="template" xml:space="preserve">
    <t t-name="theme_shopping.winter_product_carousel_snippet">
        <div class="container py-md-5 winter_products_carousel">
<!--            <div class="st-wrapper">-->
<!--                <div class="st-product-list__header">-->
<!--                    <h3 class="st-section__head">Top Deals</h3>-->
<!--                    <a href="/shop" class="st-link">View all</a>-->
<!--                </div>-->
<!--            </div>-->

            <t t-if="products">
            <div class="owl-carousel top_deal_product" id="product" style="top:21px;">
                <t t-foreach="products" t-as="product" t-key="product.id">
                    <t t-set="product_href" t-value="product.website_url" />
                    <div class="item st-product_card" t-att-data-url="product.website_url">
                        <div class="st-product_card--img">
                            <a t-att-href="product_href" class="o_carousel_product_img_link o_dynamic_product_hovered overflow-hidden">
                                <img class="st-auto-image" t-att-src="'data:image/jpeg;base64,' + product.image_1920" />

                                <div class="st-product_overlay" style="padding: 10px 10px;">
                                    <div class="st-product_overlay-content" style="width: 100%;">
                                        <a class="st-cart_btn--sm btn-add-to-cart text-center"
                                           href="#"
                                           t-att-data-product-id="product.id"
                                           t-att-data-from-snippet="true"
                                           role="button">
                                            <i class="ri-shopping-cart-2-fill"/> Add to cart
                                        </a>
                                        <button type="button"
                                                class="btn o_add_wishlist st-product-like_btn"
                                                t-att-data-product-id="product.id"
                                                role="button">
                                            <i class="fa fa-heart"/>
                                        </button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="st-product_card--detail">
                            <a t-att-href="product_href">
                                <div class="st-product_card-pricing">
                                    <t t-if="product.offer_price and product.offer_price &lt; product.actual_price">
                                        <span class="st-product_offer-price" t-esc="product.offer_price"/>
                                        <span class="st-product_price" t-esc="product.actual_price"/>
                                    </t>
                                    <t t-else="">
                                        <span class="st-product_orginal_price" t-esc="product.actual_price"/>
                                    </t>
                                </div>
                                <span class="st-product_name" t-esc="product.name"/>
                            </a>
                        </div>
                    </div>
                </t>
            </div>
        </t>
        <t t-else="">
            <div style="text-align: center;">
                <b>Please Enable Top Deal Products and add the Offer price in the product variant form.</b>
            </div>
        </t>
        </div>

</t>

</templates>
