<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="theme_lego.welcome_message" t-inherit="website.homepage_editor_welcome_message" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o_homepage_editor_welcome_message')]" position="replace">
            <div class="container text-center o_homepage_editor_welcome_message">
                <h2 class="mt0 fs-1">Welcome to your <b>Homepage</b>!</h2>
                <p class="lead d-none d-md-block fs-4">Click on <span class="fw-bold fs-4">Edit</span> in the top right corner to start designing.</p>
            </div>
        </xpath>
    </t>
</templates>
