<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="footer_lego" inherit_id="website.layout"
              name="Footer Lego">
        <xpath expr="//div[@id='footer']" position="replace">
            <t t-call="theme_lego.lego_footer_template"/>
        </xpath>
    </template>
    <template id="lego_footer_template">
        <!-- Footer section starts here -->
        <section class="footer">
            <div class="container">
                <div class="footer_content">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="wrapper">
                                <h6>
                                    About Us
                                </h6>
                                <p>
                                    Lorem ipsum dolor sit amet,
                                    consectetur adipisicing elit, sed do
                                    eiusmod tempor incididunt ut labore
                                    dolore magna aliqua.
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6  col-sm-12">
                            <div class="wrapper">
                                <h6>
                                    News Letter
                                </h6>
                                <p>
                                    Stay update with our latest
                                </p>
                                <div class="input-group md-form form-sm form-2" data-list-id="0" data-name="Newsletter Form">
                                    <input class="form-control  red-border"
                                           type="text"
                                           placeholder="Your email here"
                                           aria-label="Your_email_here"/>
                                    <button class="btn btn-outline-secondary subscribe-btn" type="button" id="newsletter">SUBSCRIBE</button>
                                </div>
                                <p class='footer_p warning' style='color: red; display: none;'/>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6  col-sm-12">
                            <div class="wrapper ft_b">
                                <h6>
                                    Instagram Feed
                                </h6>
                                <div class="row">
                                    <div class="col-3 pb-3">
                                        <img src="/theme_lego/static/src/img/instagram/i1.jpg"/>
                                    </div>
                                    <div class="col-3 pb-3">
                                        <img src="/theme_lego/static/src/img/instagram/i2.jpg"/>
                                    </div>
                                    <div class="col-3 pb-3">
                                        <img src="/theme_lego/static/src/img/instagram/i3.jpg"/>
                                    </div>
                                    <div class="col-3 pb-3">
                                        <img src="/theme_lego/static/src/img/instagram/i4.jpg"/>
                                    </div>
                                    <div class="col-3 ">
                                        <img src="/theme_lego/static/src/img/instagram/i5.jpg"/>
                                    </div>
                                    <div class="col-3 ">
                                        <img src="/theme_lego/static/src/img/instagram/i6.jpg"/>
                                    </div>
                                    <div class="col-3 ">
                                        <img src="/theme_lego/static/src/img/instagram/i7.jpg"/>
                                    </div>
                                    <div class="col-3 ">
                                        <img src="/theme_lego/static/src/img/instagram/i8.jpg"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-6  col-sm-12">
                            <div class="wrapper ft_b">
                                <h6>
                                    Follow Us
                                </h6>
                                <p>Let us be social</p>
                                <div class="footer_icon">
                                    <a href="#">
                                        <span class="fa fa-pinterest"/>
                                    </a>
                                    <a href="#">
                                        <span class="fa fa-linkedin"/>
                                    </a>
                                    <a href="#">
                                        <span class="fa fa-facebook"/>
                                    </a>
                                    <a href="#">
                                        <span class="fa fa-twitter"/>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="footer_bottom">
                            Copyright Â©2020 All rights reserved | This
                            template is made with by
                            <a href="#">Cybrosys</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer section ends here -->
    </template>
</odoo>
