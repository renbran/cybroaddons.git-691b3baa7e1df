<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="latest_features" name="Features">
        <section class="awards p_top p_bottom" data-snippet="latest_features" data-name="Features">
            <div class="wrapper">
                <div class="container">
                    <div class="row p_top">
                        <div class="col-lg-3 col-md-3 col-12">
                            <h5 class="u_sub_heading_dark">Features</h5>
                        </div>
                        <div class="col-lg-9 col-md-9 col-12">
                            <div class="about_right">
                                <h3 class="bold_heading">
                                    We craft beautifully useful marketing and digital products.
                                </h3>
                                <p class="p_text">
                                    " Minim veniam nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                                </p>
                                <div class="desc_img"></div>
                            </div>
                            <!-- Odoo-compatible accordion with proper functionality -->
                            <div class="features_accordion">
                                <div class="accordion_item">
                                    <div class="accordion_header">
                                        <button class="accordion_btn active" onclick="toggleAccordion(this)">
                                            DIGITAL &amp; WEB
                                            <span class="accordion_icon">+</span>
                                        </button>
                                    </div>
                                    <div class="accordion_content show">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <ul>
                                                    <li>Visual Identity</li>
                                                    <li>Brand Messaging</li>
                                                    <li>Publication Design</li>
                                                </ul>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <p>
                                                    Minim veniam nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion_item">
                                    <div class="accordion_header">
                                        <button class="accordion_btn" onclick="toggleAccordion(this)">
                                            BRANDING &amp; GRAPHICS
                                            <span class="accordion_icon">+</span>
                                        </button>
                                    </div>
                                    <div class="accordion_content">
                                        <div class="row">
                                            <div class="col-12">
                                                <p>Content for Branding &amp; Graphics section goes here.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion_item">
                                    <div class="accordion_header">
                                        <button class="accordion_btn" onclick="toggleAccordion(this)">
                                            MARKETING
                                            <span class="accordion_icon">+</span>
                                        </button>
                                    </div>
                                    <div class="accordion_content">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <ul>
                                                    <li>Social Media Strategy</li>
                                                    <li>Content Marketing</li>
                                                    <li>SEO Optimization</li>
                                                </ul>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <p>
                                                    Marketing solutions to help your business grow and reach your target audience effectively.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion_item">
                                    <div class="accordion_header">
                                        <button class="accordion_btn" onclick="toggleAccordion(this)">
                                            WEB DEVELOPMENT
                                            <span class="accordion_icon">+</span>
                                        </button>
                                    </div>
                                    <div class="accordion_content">
                                        <div class="row">
                                            <div class="col-12">
                                                <p>Full-stack web development services to bring your digital vision to life.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <script>
                                function toggleAccordion(btn) {
                                    const content = btn.closest('.accordion_item').querySelector('.accordion_content');
                                    const icon = btn.querySelector('.accordion_icon');
                                    const isActive = btn.classList.contains('active');

                                    // Close all other accordion items
                                    const allBtns = btn.closest('.features_accordion').querySelectorAll('.accordion_btn');
                                    const allContents = btn.closest('.features_accordion').querySelectorAll('.accordion_content');
                                    const allIcons = btn.closest('.features_accordion').querySelectorAll('.accordion_icon');

                                    allBtns.forEach(b => b.classList.remove('active'));
                                    allContents.forEach(c => c.classList.remove('show'));
                                    allIcons.forEach(i => i.textContent = '+');

                                    // Toggle current item
                                    if (!isActive) {
                                        btn.classList.add('active');
                                        content.classList.add('show');
                                        icon.textContent = '-';
                                    }
                                }
                            </script>

                            <style>
                                .features_accordion {
                                    border: 1px solid #e0e0e0;
                                    border-radius: 8px;
                                    overflow: hidden;
                                }

                                .accordion_item {
                                    border-bottom: 1px solid #e0e0e0;
                                }

                                .accordion_item:last-child {
                                    border-bottom: none;
                                }

                                .accordion_header {
                                    background: #f8f9fa;
                                }

                                .accordion_btn {
                                    width: 100%;
                                    padding: 15px 20px;
                                    background: none;
                                    border: none;
                                    text-align: left;
                                    font-weight: 600;
                                    font-size: 14px;
                                    color: #333;
                                    cursor: pointer;
                                    display: flex;
                                    justify-content: space-between;
                                    align-items: center;
                                    transition: background-color 0.3s ease;
                                }

                                .accordion_btn:hover,
                                .accordion_btn.active {
                                    background: #e9ecef;
                                }

                                .accordion_icon {
                                    font-size: 18px;
                                    font-weight: bold;
                                    color: #007bff;
                                    transition: transform 0.3s ease;
                                }

                                .accordion_content {
                                    max-height: 0;
                                    overflow: hidden;
                                    transition: max-height 0.3s ease;
                                    background: white;
                                }

                                .accordion_content.show {
                                    max-height: 500px;
                                    padding: 20px;
                                }

                                .accordion_content ul {
                                    list-style-type: none;
                                    padding: 0;
                                }

                                .accordion_content li {
                                    padding: 5px 0;
                                    border-bottom: 1px solid #f0f0f0;
                                }

                                .accordion_content li:last-child {
                                    border-bottom: none;
                                }
                            </style>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>