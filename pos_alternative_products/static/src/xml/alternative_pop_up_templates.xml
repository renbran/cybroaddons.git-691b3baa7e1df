<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pos_alternative_products.AlternativeProduct">
        <Dialog size="'md'" title="props.title" modalRef="modalRef">
            <main class="body">
                    <div class="product-list-container" style="width: 80%; max-width: 300px; margin: auto; padding: 10px;">
                        <t t-foreach="props.body" t-as="item" t-key="item.id">
                        <span class="product product_content fix_product selected"
                              t-att-data-product-id="item.id"
                              t-on-click="() => this.clickProduct(item)">
                            <div class="product-list row">
                                <div class="product-img text-center">
                                    <img t-att-src="item.image_url"/>
                                </div>
                                <div class="product-name text-center">
                                    <t t-esc="item.display_name"/>
                                </div>
                            </div>
                        </span>
                    </t>
                    </div>
            </main>
            <t t-set-slot="footer">
               <button class="button cancel btn btn-lg btn-danger" t-on-click="this.props.close">
                    <t t-esc="props.cancelText"/>
               </button>
            </t>
        </Dialog>
    </t>
</templates>