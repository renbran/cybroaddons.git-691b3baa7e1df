<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
<t t-name="pos_order_question.ConfirmationDialog">
    <Dialog size="'md'" title="props.title" modalRef="modalRef">
        <main class="body">
                    <t t-if="props.body">
                        <t t-set="questions" t-value="props.body.split('\n')" />
                        <div class="column flex-start" id="SecDiv">
                            <t t-foreach="questions" t-as="question" t-key="question">
                                <div id="ThirdDiv">
                                    <div>
                                        <input  t-on-change="(ev) => this.changeCheckBox(ev)"
                                               type="checkbox" id="CheckButtonId"
                                                t-att-data-value="question"
                                               class="form-check-input" style="box-shadow: 0px;"
                                               />

                                    </div>
                                    <div class="addons_items">
                                        <t t-esc="question" class="addons"/>
                                    </div>

                                </div>

                            </t>
                        </div>
                    </t>
            </main>
      <t t-set-slot="footer">
        <button class="btn" t-att-class="props.confirmClass" t-on-click="confirm" t-esc="props.confirmLabel"/>
      </t>
    </Dialog>
</t>
</templates>