<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="product_template_new_inherit_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit.new</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_ok']" position="before">
                    <group>
                        <field name="is_room" nolabel="1"/>
                        <label for="is_room" string="Room"/>
                    </group>
                </xpath>
                <notebook>
                    <page string="Information" invisible="is_room != True">
                        <group>
                            <group>
                                <field name="floor_id" string="Floor"/>
                                <field name="user_id" select="2"
                                           string="Room Manager"/>
                            </group>
                            <group>
                                    <field name="room_type"/>
                                    <field name="list_price" widget="monetary"
                                           string="Rent"/>
                                    <field name="num_person"/>
                            </group>
                        </group>
                    </page>
                    <page string="Amenities" invisible="is_room != True">
                        <group>
                            <group>
                                <field name="room_amenities_ids"
                                       widget="many2many_tags"
                                       string="Room Amenities"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
</odoo>