<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for mo overview report -->
    <template id="mrp_cost_per_employee_report" inherit_id="mrp.mo_overview_content">
        <xpath expr="//table" position="inside">
            <tr>
                <td class="text-end" t-att-colspan="data['footer_colspan']">Total Cost per Employee</td>
                <td  t-attf-class="text-end" t-out="data['cost_per_employ']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
            </tr>
        </xpath>
    </template>
</odoo>
