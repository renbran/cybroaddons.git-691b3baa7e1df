<?xml version="1.0" encoding="utf-8"?>
<!--    Template for cost structure report-->
    <templates>
        <t t-name="cost_per_employee_manufacturing.mrp_cost_per_employee"
           t-inherit="mrp.MoOverview" t-inherit-mode="extension" owl="1">
            <xpath expr="//tr[@t-if='hasOperations']" position="after">
                <tr t-if="state.data.cost_per_employ != 0">
                    <td class="text-end" t-att-colspan="totalColspan">Total Cost per Employee</td>
                    <td class="text-end" t-out="formatCost(state.data.cost_per_employ)"/>
                </tr>
            </xpath>
        </t>
    </templates>
