<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="domain_model_view_form" model="ir.ui.view">
        <field name="name">domain.model.view.form</field>
        <field name="model">domain.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="domain_model_id"/>
                        <field name="domain_model_name" invisible="True"/>
                        <field name="name" widget="domain" options="{'model': 'domain_model_name'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="domain_model_view_list" model="ir.ui.view">
        <field name="model">domain.model</field>
        <field name="arch" type="xml">
            <list string="Domains">
                <field name="domain_model_id"/>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>
