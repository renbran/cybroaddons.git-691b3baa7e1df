<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="role_management_view_form" model="ir.ui.view">
        <field name="name">role.management.view.form</field>
        <field name="model">role.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <label for="name"/>
                                <h1>
                                    <div class="d-flex">
                                        <field class="text-break" name="name"
                                               options="{'line_breaks': False}"
                                               widget="text"/>
                                    </div>
                                </h1>
                            </div>
                            <field name="role_ids" widget="many2many_tags"/>
                            <field name="selected_role_ids" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_chatter"/>
                            <field name="is_debug" />
                            <field name="is_readonly"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="hide_menu" string="Hide Menu">
                                <field name="menu_ids" options="{'no_create': True, 'no_create_edit':True}"/>
                        </page>
                        <page name="hide_button_tab" string="Hide Any Button or Tab">
                            <field name="button_access_ids" widget="one2many">
                                <list string="Fields" editable="bottom">
                                    <field name="model_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="button_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="tab_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                </list>
                            </field>
                        </page>
                        <page name="hide_filter_groupby"
                              string="Hide Any Filter or GroupBy">
                            <field name="filter_access_ids" widget="one2many">
                                <list string="Fields" editable="bottom">
                                    <field name="model_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="filter_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="group_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                </list>
                            </field>
                        </page>
                        <page name="edit_fields"
                              string="Edit Fields Access">
                            <field name="field_access_ids" widget="one2many">
                                <list string="Fields" editable="bottom">
                                    <field name="model_id" options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="fields_ids"
                                           widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="is_field_readonly"/>
                                    <field name="is_field_invisible"/>
                                    <field name="is_field_required"/>
                                    <field name="is_remove_link"/>
                                </list>
                            </field>
                        </page>
                        <page name='edit_model' string="Edit Model Access">
                            <field name="model_access_ids" widget="one2many">
                                <list string="Fields" editable="bottom">
                                    <field name="model_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="is_model_readonly"/>
                                    <field name="is_hide_create"/>
                                    <field name="is_hide_delete"/>
                                    <field name="is_hide_archive"/>
                                    <field name="is_hide_export"/>
                                    <field name="is_hide_duplicate"/>
                                    <field name="hide_report_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="hide_actions_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                                </list>
                            </field>
                        </page>
                        <page name='edit_domain' string="Edit Domain Access">
                                <list string="Fields">
                                    <field name="domain_ids"
                                           context="{'form_view_ref': 'access_roles.domain_model_view_form'}"/>
                                </list>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="action_role_management" model="ir.actions.act_window">
        <field name="name">Role Management</field>
        <field name="res_model">role.management</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
