<?xml version="1.0" encoding="UTF-8"?>
<!--Create wallet recharge screen-->
<templates id="template" xml:space="preserve">
    <t t-name="pos_customer_wallet_management.RechargeScreen" owl="1">
        <Dialog>
            <div class="popup">
            <div class="modal-header">
                <t t-log="props,'propssss'"/>
                <h4 class="modal-title"><t t-esc="props.title"/></h4>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Partner Name</label>
                    <input class='form-control' readonly="true"
                           t-att-value="props.partner ? props.partner.name : 'No Partner'"/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Balance Amount</label>
                    <input class='form-control' readonly="true"
                           t-att-value="(props.partner.wallet_balance || 0).toFixed(2)"/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Payment Journal</label>
                    <select class="form-select" t-ref="journalInput">
                        <t t-if="journals and journals.length">
                            <t t-foreach="journals" t-as="journal" t-key="journal.id">
                                <option t-att-value="journal.id">
                                    <t t-esc="journal.name"/>
                                </option>
                            </t>
                        </t>
                        <t t-else="">
                            <option value="">No payment journals available</option>
                        </t>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Recharge Amount</label>
                    <input class='form-control' type='number' t-ref="amountInput"
                           step="0.01" min="0.01"/>
                </div>
            </div>
            <footer class="footer modal-footer justify-content-between">
                <button class="btn btn-primary" t-on-click="confirm">
                    <t t-esc="props.confirmText"/>
                </button>
                <button class="btn btn-secondary" t-on-click="cancel">
                    <t t-esc="props.cancelText"/>
                </button>
            </footer>
        </div>
        </Dialog>
    </t>
</templates>
