<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ecommerce_category_normal_form_view" model="ir.ui.view">
            <field name="name">ecommerce.category.view.form.inherit.theme.diva</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_description']" position="after">
                <field name="is_diva_product"/>
                <field name="category_image" invisible="is_diva_product != True" help="Image for the website carousel"/>
            </xpath>
        </field>
    </record>
</odoo>
