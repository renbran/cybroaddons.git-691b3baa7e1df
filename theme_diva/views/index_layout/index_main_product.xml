<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Snippet Registration -->
    <template id="index_product_snippet_registration" inherit_id="website.snippets" name="Index Product Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_diva.diva_index_main_product"
               t-thumbnail="/theme_diva/static/src/images/snippets/index-1/main_product.jpg"/>
        </xpath>
    </template>

    <!-- Editor-Time Placeholder -->
    <template id="diva_index_main_product" name="Index Product">
        <section class="oe_structure">
            <div class="main_product_snippet_class">
                <div class="container">
                    <div class="alert alert-warning text-center">
                        <strong>Heads up!</strong> Index Product section will be loaded after saving the page.
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Dynamic Content -->
    <template id="diva_index_main_product_dynamic" name="Index Product Content">
        <section class="oe_structure">
            <div class="container">
                <div class="row">
                    <t t-foreach="main_products" t-as="mp">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <img t-att-src="'/web/image/product.template/' + str(mp.id) + '/image_1920'"
                                     class="card-img-top" loading="lazy"/>
                                <div class="card-body text-center">
                                    <h5 class="card-title" t-esc="mp.name"/>
                                    <a t-att-href="mp.website_url" class="btn btn-primary mt-2">
                                        Shop Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </section>
    </template>
</odoo>
