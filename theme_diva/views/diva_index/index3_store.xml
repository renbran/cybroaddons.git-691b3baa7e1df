<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Snippet Registration -->
    <template id="index3_store" inherit_id="website.snippets" name="Index3 Store">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_diva.diva_index3_store"
               t-thumbnail="/theme_diva/static/src/images/snippets/index-3/store.jpg">
                <t t-set="snippet_description">
                    Promote your store with a professional welcome message and call-to-action button. Ideal for homepages or landing pages.
                </t>
            </t>
        </xpath>
    </template>

    <!-- Snippet Template -->
    <template id="diva_index3_store" name="Theme Diva Store">
        <!-- Store section -->
        <section class="store py-5"
                 data-snippet="theme_diva.diva_index3_store"
                 data-name="Store Intro Section">
            <div class="container">
                <div class="wrapper">
                    <h6 class="text-primary">FEATURED STORE</h6>
                    <h3 class="mb-4">Welcome to Your Business Name</h3>
                    <p class="lead">
                        Discover a world of quality products and exceptional service at <strong>Your Business Name</strong>.
                        Our store offers a curated selection of items designed to meet your needs, backed by the powerful and flexible Odoo platform.
                        <br/>
                        Explore our collections and experience seamless shopping, crafted with care by
                        <a href="/contactus" class="text-decoration-underline">Your Business Name</a>.
                    </p>

                </div>
            </div>
        </section>
    </template>
</odoo>
