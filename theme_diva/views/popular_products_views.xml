<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_popular_products_tree" model="ir.ui.view">
        <field name="name">popular.products</field>
        <field name="model">popular.products</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_popular_products_form" model="ir.ui.view">
        <field name="name">popular.products.form</field>
        <field name="model">popular.products</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_count"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="list_price"/>
                                    <field name="website_published"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_popular_products" name="Popular Products"
              parent="website.menu_website_configuration" sequence="10"
              action="action_popular_products"/>
</odoo>