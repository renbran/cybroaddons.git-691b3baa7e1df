<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="generative_ai.generate_button" t-inherit="web_editor.AddSnippetDialog"
       t-inherit-mode="extension">
        <xpath expr="//Dialog" position="inside">
            <div class="o_add_snippet_dialog_wrapper position-relative">
                <button type="button"
                        class="btn btn-primary position-absolute generate_with_ai"
                        style="bottom: 0; right: 15px; margin-bottom: 15px; white-space: nowrap;"
                        t-on-click="_onGenerateClick">
                    Generate with AI
                </button>
            </div>
        </xpath>
    </t>
</templates>
