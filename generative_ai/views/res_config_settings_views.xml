<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="website_info_settings" position="after">
                <block title="AI tools" id="generative_ai">
                    <setting>
                        <div class="content-group">
                            <div class="row mt8">
                                <label class="col-lg-3"
                                       string="Generative AI Systems"
                                       for="generative_ai_systems"/>
                                <field name="generative_ai_systems"
                                       title="Choose the required AI tool"/>
                            </div>
                        </div>
                    </setting>
                    <setting id="max_token_id"
                             title="sets the upper limit on the number of tokens that can
                             be generated or processed in a single API request.">
                        <div class="content-group">
                            <div class="row mt8">
                                <label class="col-lg-3" string="Maximum tokens"
                                       for="max_token"
                                       invisible="not generative_ai_systems"/>
                                <field name="max_token"
                                       title="Set the maximum tokens to be set while api request"
                                       invisible="not generative_ai_systems"/>
                            </div>

                        </div>
                    </setting>
                    <setting>
                        <div class="row mt8">
                            <label class="col-lg-3" string="API Key" for="api_key"
                                   invisible="not generative_ai_systems"/>
                            <field name="api_key" required="generative_ai_systems"
                                   title="API Key for chosen AI tool"
                                   invisible="not generative_ai_systems"/>
                        </div>
                        <div class="row mt8">
                            <label class="col-lg-3" string="AI Model" for="model_id"
                                   invisible="generative_ai_systems in ['openrouter'] or not generative_ai_systems"/>
                            <field name="model_id"
                                   title="Model for chosen AI tool"
                                   invisible="generative_ai_systems in ['openrouter'] or not generative_ai_systems"/>
                        </div>
                        <div class="row mt8">
                            <label class="col-lg-3" string="Openrouter Model"
                                   for="openrouter_model_id"
                                   invisible="generative_ai_systems in ['openai'] or not generative_ai_systems"/>
                            <field name="openrouter_model_id" widget="selection"
                                   options="{'no_create': True, 'no_open': True}"
                                   title="Model for chosen AI tool"
                                   invisible="generative_ai_systems in ['openai'] or not generative_ai_systems"/>
                        </div>
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
