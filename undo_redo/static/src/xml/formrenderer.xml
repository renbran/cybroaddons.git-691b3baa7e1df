<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.FormView" t-inherit-mode="extension">
        <xpath expr="//CogMenu" position="after">
            <t t-set-slot="control-panel-additional-actions">
                <button t-att-disabled="!state.undo.length" class="btn btn-secondary ms-3 mt-2" t-on-click="undo">
                    <i class="fa fa-undo"/>
                </button>
                <button t-att-disabled="!state.redo.length" class="btn btn-secondary ms-2 mt-2" t-on-click="redo">
                    <i class="fa fa-repeat"/>
                </button>
            </t>
        </xpath>
    </t>
</templates>
