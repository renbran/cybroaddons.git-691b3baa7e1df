<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Define an action to open the "Document Request Accept" window -->
    <record id="document_request_accept_action" model="ir.actions.act_window">
        <field name="name">Document Request Accept</field>
        <field name="res_model">document.request.accept</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Define a form view for the document.request.accept model -->
    <record id="document_request_accept_view_form" model="ir.ui.view">
        <field name="name">document.request.accept.view.form</field>
        <field name="model">document.request.accept</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="filename" invisible="1"/>
                    <field name="document_file" filename="filename"/>
                    <field name="workspace_id"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button class="btn btn-primary" string="UPLOAD"
                            name="action_accept_request" type="object"/>
                    <button class="btn" string="DISCARD" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
