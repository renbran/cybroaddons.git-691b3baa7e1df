<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Define an action to open the "Document Request Reject" window -->
    <record id="document_request_reject_action" model="ir.actions.act_window">
        <field name="name">Document Request Reject</field>
        <field name="res_model">document.request.reject</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Define a form view for the document.request.reject model -->
    <record id="document_request_reject_view_form" model="ir.ui.view">
        <field name="name">document.request.reject.view.form</field>
        <field name="model">document.request.reject</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reject_reason"/>
                </group>
                <footer>
                    <button class="btn btn-primary" string="REJECT"
                            name="action_reject_request" type="object"/>
                    <button class="btn" string="DISCARD" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
