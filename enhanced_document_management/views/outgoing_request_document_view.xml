<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- This XML record defines a form view for creating or editing incoming document requests.-->
    <record id="request_document_view_form" model="ir.ui.view">
        <field name="name">request.document.view.form</field>
        <field name="model">request.document</field>
        <field name="arch" type="xml">
            <form string="Request document">
                <header>
                    <button name="action_send_document_request"
                            string="REQUEST"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,accepted,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="display_name" options="{'line_breaks': False}"
                                       widget="text"
                                       readonly="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" string="Request To"/>
                            <field colspan="2" name="needed_doc" string="Note"
                                   placeholder="Document Needed....."/>
                            <field name="workspace_id" string="Workspace"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="public" string="Reject reason"
                              invisible="state != 'rejected'">
                            <field name="reject_reason"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>
    <!--  This XML record defines a list view for the 'request.document' model.-->
    <record id="request_document_view_list" model="ir.ui.view">
        <field name="name">request.document.view.list</field>
        <field name="model">request.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name" string="Name"/>
                <field name="needed_doc" string="Request"/>
                <field name="requested_by_id" string="Requested by"
                       widget="many2one_avatar_user"/>
                <field name="user_id" string="Requested to"
                       widget="many2one_avatar_user"/>
                <field name="create_date" string="Requested Date"/>
                <field name="workspace_id" string="Workspace"/>
                <field name="needed_doc" string="Document"/>
                <field name="state" string="State" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'requested'"
                       decoration-danger="state == 'rejected'"
                       decoration-success="state == 'accepted'"/>
            </list>
        </field>
    </record>
    <!-- This XML code defines an Odoo search view for searching and filtering outgoing request documents. -->
    <record id="request_document_outgoing_view_search" model="ir.ui.view">
        <field name="name">request.document.outgoing.view.search</field>
        <field name="model">request.document</field>
        <field name="arch" type="xml">
            <search string="Document Search">
                <field name="display_name" string="Name"/>
                <field name="needed_doc" string="Request"/>
                <field name="create_date"/>
                <field name="workspace_id"/>
                <field name="state"/>
                <filter string="My requests" name="user_id"
                        domain="[('requested_by_id.id', '=', uid )]"/>
                <separator/>
                <filter string="Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Requested" name="requested"
                        domain="[('state', '=', 'requested')]"/>
                <filter string="Accepted" name="accepted"
                        domain="[('state', '=', 'accepted')]"/>
                <filter string="Rejected" name="rejected"
                        domain="[('state', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_workspace" string="Workspace"
                            context="{'group_by':'workspace_id'}"/>
                    <filter name="group_state" string="State"
                            context="{'group_by':'state'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by':'create_date'}"/>
                </group>
            </search>
        </field>
    </record>
     <!--  This XML record defines an action window to open the Outgoing Requests list view.-->
    <record id="request_document_action_outgoing" model="ir.actions.act_window">
        <field name="name">Outgoing Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">request.document</field>
        <field name="domain">[('requested_by_id','=', uid)]</field>
        <field name="search_view_id" ref="request_document_outgoing_view_search"/>
        <field name="view_mode">list,form</field>
        <field name="context">{ "search_default_user_id":uid, }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Request for document from user
            </p>
        </field>
    </record>
</odoo>
