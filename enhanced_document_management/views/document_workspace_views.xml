<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    This XML record defines an action for managing WorkSpaces.-->
    <record id="document_workspace_action" model="ir.actions.act_window">
        <field name="name">WorkSpace</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.workspace</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Workspace
            </p>
        </field>
    </record>
    <!--        This XML record defines a form view for managing WorkSpaces.-->
    <record id="document_workspace_form_view" model="ir.ui.view">
        <field name="name">document.workspace.form.view</field>
        <field name="model">document.workspace</field>
        <field name="arch" type="xml">
            <form string="Workspace">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button id="button_view_document"
                                name="button_view_document"
                                type="object" class="oe_stat_button"
                                icon="fa-edit"
                                invisible="document_count == 0">
                            <field name="document_count" string="Documents"
                                   widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" options="{'line_breaks': False}"
                                       widget="text"
                                       readonly="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>

                        </group>
                        <group>
                            <field name="google_drive_folder_id"/>
                            <field name="onedrive_folder_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Settings">
                            <label for="privacy_visibility"/>
                            <field name="privacy_visibility"
                                   string='Visibility' widget="radio"
                                   groups="enhanced_document_management.view_all_document"
                                   style="margin: 10px;"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>
    <!--        This XML record defines a list view for displaying WorkSpaces.-->
    <record id="document_workspace_view_list" model="ir.ui.view">
        <field name="name">document.workspace.view.list</field>
        <field name="model">document.workspace</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>
    <!-- This XML code defines an Odoo search view for searching and filtering Workspace. -->
    <record id="document_workspace_view_search" model="ir.ui.view">
        <field name="name">document.workspace.view.search</field>
        <field name="model">document.workspace</field>
        <field name="arch" type="xml">
            <search string="Workspace Search">
                <field name="name" string="Name"/>
                <field name="company_id" string="Company"/>
            </search>
        </field>
    </record>
</odoo>
