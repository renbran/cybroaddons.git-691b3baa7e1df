<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    List view-->
    <record id="document_template_request_view_list" model="ir.ui.view">
        <field name="name">document.template.request.view.list</field>
        <field name="model">document.template.request</field>
        <field name="arch" type="xml">
            <list string="Document request">
                <field name="display_name"/>
                <field name="document_id"/>
                <field name="manager_id"/>
                <field name="requested_date"/>
                <field name="state" string="State" widget="badge"
                       decoration-muted="state == 'new'"
                       decoration-info="state == 'document_approval'"
                       decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>
    <!--    Form view-->
    <record id="document_template_request_view_form" model="ir.ui.view">
        <field name="name">document.template.request.view.form</field>
        <field name="model">document.template.request</field>
        <field name="arch" type="xml">
            <form string="Document requests">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,approved"/>
                    <button class="btn-primary"
                            type="object"
                            string="Submit Approval"
                            invisible="state != 'new'"
                            name="action_sent_document_approval"/>
                    <button class="btn-primary" type="object"
                            string="Approve"
                            invisible="state != 'document_approval'"
                            groups="enhanced_document_management.view_all_document"
                            name="action_approve"/>
                    <button class="btn-primary" type="object"
                            invisible="state != 'document_approval'"
                            string="Preview Document"
                            name="action_preview_document"/>
                    <button class="btn-primary"
                            type="object"
                            invisible="state != 'approved'"
                            string="Download"
                            name="action_download_document"/>
                </header>
                <sheet>
                    <field name="stamp" widget="image" class="oe_avatar" options="{'preview_image': 'stamp'}"/>
                    <div class="oe_title">
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="display_name" options="{'line_breaks': False}"
                                       widget="text"
                                       readonly="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_id"
                                   options="{'no_create': True,'no_create_edit': True}"
                                   readonly="state != 'new'"/>
                            <field name="requested_date"
                                   readonly="state != 'new'"/>
                        </group>
                        <group>
                            <field name="manager_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Template" invisible="not document_id">
                            <field name="template"
                                   readonly="state == 'approved'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>
    <!--    Calendar view-->
    <record id="document_template_request_view_calendar" model="ir.ui.view">
        <field name="name">document.template.request.view.calendar</field>
        <field name="model">document.template.request</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar date_start="requested_date"
                      string="Document"
                      mode="month">
                <field name="requested_date"/>
            </calendar>
        </field>
    </record>
    <!-- This record defines a search view for the model 'document.template.request'. -->
    <record id="document_template_request_view_search" model="ir.ui.view">
        <field name="name">document.template.request.view.search</field>
        <field name="model">document.template.request</field>
        <field name="arch" type="xml">
            <search string="Document Search">
                <field name="display_name"/>
                <field name="state"/>
                <field name="document_id" string="Document"/>
                <filter string="My requests" name="user_id"
                        domain="['|',('user_id.id', '=', uid ),('manager_id.id', '=', uid )]"/>
                <separator/>
                <filter string="New" name="New"
                        domain="[('state', '=', 'new' )]"/>
                <filter string="Document Approval" name="Document Approval"
                        domain="[('state', '=', 'document_approval' )]"/>
                <filter string="Approved" name="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_documents" string="Documents"
                            context="{'group_by':'document_id'}"/>
                    <filter name="group_state" string="State"
                            context="{'group_by':'state'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by':'create_date'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--Action for document.template.request model-->
    <record id="document_template_request_action"
            model="ir.actions.act_window">
        <field name="name">Document Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.template.request</field>
        <field name="domain">['|',('user_id.id', '=', uid ),('manager_id.id',
            '=', uid )]
        </field>
        <field name="search_view_id" ref="document_template_request_view_search"/>
        <field name="view_mode">list,calendar,form</field>
        <field name="context">{
            "search_default_user_id":uid,
            }
        </field>
    </record>
</odoo>
