<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- This template customizes the portal view to include a menu entry for "Document Requests". -->
    <template id="portal_document_request" name="Document Requests"
              customize_show="True" inherit_id="portal.portal_my_home"
              priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="request.env.user.has_group('enhanced_document_management.view_all_document')">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Document Template Requests</t>
                    <t t-set="url" t-value="'/document_request'"/>
                    <t t-set="placeholder_count" t-value="'doc_req_count'"/>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
