<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="document_delete_trash_view_form" model="ir.ui.view">
        <!-- Unique identifier for this view record -->
        <field name="name">document.delete.trash.view.form</field>
        <!-- Model associated with this view -->
        <field name="model">document.delete.trash</field>
        <field name="arch" type="xml">
            <!-- XML definition of the view -->
            <form>
                <!-- Form view -->
                <group>
                    <!-- Grouping elements within the form -->
                    <h2 class="move_trash_heading">Move to Trash/Delete Document Permanently</h2>
                    <!-- Heading or title for the form -->
                    <field name="document_file_id" readonly="1" invisible="1"/>
                    <!-- Field element (possibly for selecting a document) with attributes for readonly and invisibility -->
                </group>
                <!-- End of group -->
                <footer>
                    <!-- Footer section of the form -->
                    <button class="document_lock_wizard move_trash" type="object" name="document_move_trash">Move to Trash</button>
                    <!-- Button for moving the document to the trash -->
                    <button class="document_lock_wizard move_trash" type="object" name="document_permanent_delete">Delete Permanently</button>
                    <!-- Button for permanently deleting the document -->
                    <button class="document_cancel_wizard move_trash_wizard" special="cancel" string="Cancel"/>
                    <!-- Button for canceling the operation -->
                </footer>
            </form>
            <!-- End of form view -->
        </field>
    </record>
</odoo>
