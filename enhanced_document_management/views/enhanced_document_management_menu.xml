<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Defines a menu structure for a document module.-->
    <!-- Root Menu: Documents -->
    <menuitem id="document_file_menu"
              name="Documents"
              action="document_file_action"
              web_icon="enhanced_document_management,static/description/icon.png"
              sequence="0"/>
    <!-- Sub Menu: Documents (Child of Root) -->
    <menuitem id="document_file_menu_sub"
              name="Documents"
              action="document_file_action"
              parent="document_file_menu"
              sequence="1"/>
    <!-- Configuration Menu (Child of Root) -->
    <menuitem id="enhanced_document_management_config_menu"
              name="Configuration"
              parent="document_file_menu"/>

    <!-- Workspace Document (Child of Configuration) -->
    <menuitem id="document_workspace_menu"
              name="Workspace"
              action="document_workspace_action"
              parent="enhanced_document_management_config_menu"
              sequence="1"/>

    <!--    Menu item that open settings  -->
    <menuitem id="document_module_settings_menu" name="Settings"
              action="enhanced_document_management.document_config_settings_action"
              parent="enhanced_document_management_config_menu"
              sequence="0"/>

    <!-- Trash Document (Child of Configuration) -->
    <menuitem id="document_trash_menu"
              name="Trash"
              action="document_trash_action"
              parent="enhanced_document_management_config_menu"
              sequence="2"/>
    <!-- Tags Menu (Child of Configuration) -->
    <menuitem id="document_tag_menu"
              name="Tags"
              action="document_tag_action"
              parent="enhanced_document_management_config_menu"
              sequence="3"/>
    <!-- Requests Menu (Child of Configuration) -->
    <menuitem id="document_request_menu"
              name="Operations"
              parent="document_file_menu"
              sequence="1"
    />

    <!-- Incoming Requests (Child of Requests) -->
    <menuitem id="request_document_menu_incoming"
              name="Incoming Requests"
              action="request_document_incoming_action"
              parent="document_request_menu"
              sequence="4"/>
    <!-- Outgoing Requests (Child of Requests) -->
    <menuitem id="request_document_menu_outgoing"
              name="Outgoing Requests"
              action="request_document_action_outgoing"
              parent="document_request_menu"
              sequence="3"/>
    <!-- Document Request Template (Child of Requests) -->
    <menuitem id="document_request_template_menu"
              name="Document Request Template"
              action="document_request_template_action"
              parent="document_request_menu"
              sequence="3"/>
    <!-- Request a Template (Child of Requests) -->
    <menuitem id="document_template_request_menu"
              name="Request a Template"
              action="document_template_request_action"
              parent="document_request_menu"
              sequence="2"/>
</odoo>
