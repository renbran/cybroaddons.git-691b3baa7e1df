<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--list view-->
    <record id="document_request_template_view_list" model="ir.ui.view">
        <field name="name">document.request.template.view.list</field>
        <field name="model">document.request.template</field>
        <field name="arch" type="xml">
            <list string="Document request template">
                <field name="name"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>
    <!--    Form view-->
    <record id="document_request_template_view_form" model="ir.ui.view">
        <field name="name">document.request.template.view.form</field>
        <field name="model">document.request.template</field>
        <field name="arch" type="xml">
            <form string="Document request template">
                <sheet>
                    <field name="stamp" widget="image" class="oe_avatar" options="{'preview_image': 'stamp'}"/>
                    <div class="oe_title">
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Leave Letter" readonly="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field  name="name"/>
                            <field name="manager_id"
                                   domain="[('id', 'in', user_ids)]"/>
                             <field name="company_id"/>
                            <field name="user_ids" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Template">
                            <field name="template"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>
     <!-- This XML code defines an Odoo search view for searching and filtering incoming  documents request . -->
    <record id="document_request_template_view_search" model="ir.ui.view">
        <field name="name">document.request.template.view.search</field>
        <field name="model">document.request.template</field>
        <field name="arch" type="xml">
            <search string="Document Template">
                <field name="name" string="Name"/>
                <field name="company_id" string="Company"/>
                <filter string="My Document Templates" name="manager_id"
                        domain="[('manager_id.id', '=', uid)]"/>
            </search>
        </field>
    </record>
    <!--Action for document.request.template model-->
    <record id="document_request_template_action"
            model="ir.actions.act_window">
        <field name="name">Document Request Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.request.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_manager_id': uid}</field>
    </record>
</odoo>
