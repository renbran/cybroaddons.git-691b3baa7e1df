<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- This record defines a wizard form view for the model 'request.document'. -->
    <record id="request_document_wizard_view_form" model="ir.ui.view">
        <field name="name">request.document.wizard.view.form</field>
        <field name="model">request.document</field>
        <field name="arch" type="xml">
            <form string="Request document">
                <group>
                     <group>
                    <field name="user_id" string="Request To"/>
                    <field name="workspace_id" string="Workspace"/>
                    <field colspan="2" name="needed_doc" string="Note"
                           placeholder="Document Needed....."/>
                </group>
                </group>
                <footer>
                    <button name="action_send_document_request"
                            string="REQUEST"
                            type="object" class="btn-primary"/>
                    <button class="btn" string="DISCARD" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
