<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="document_tag_list" model="ir.ui.view">
        <field name="name">document.tag.list</field>
        <field name="model">document.tag</field>
        <field name="arch" type="xml">
                <list string="Tags" editable="bottom" sample="1">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="document_tag_action" model="ir.actions.act_window">
        <field name="name">Document tag</field>
        <field name="res_model">document.tag</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
