<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    form view for locking documents-->
    <record id="document_lock_view_form" model="ir.ui.view">
        <field name="name">document.lock.view.form</field>
        <field name="model">document.lock</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="document_file_id" readonly="1"
                               invisible="1"/>
                        <field name="password" password="True"/>
                    </group>
                </group>
                <footer>
                    <button class="document_lock_wizard" type="object"
                            name="lock_doc">Lock
                    </button>
                    <button class="document_cancel_wizard" special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
